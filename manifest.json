{
  "manifest_version": 3,
  "name": "333CHAT",
  "version": "1.0",
  "description": "Extension de chating éphémère pour communiquer facilement via un système de salon public ou privé",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://*.firebasedatabase.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "333CHAT",
    "default_icon": "icone.png"
  },
  "background": {
    "service_worker": "background-simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icone.png"
  }
}
{
  "manifest_version": 3,
  "name": "Mini Chat",
  "version": "1.0",
  "description": "Extension de mini chat pour partager facilement des liens et cl√©s CD entre vous et votre copine",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mini Chat"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}